
@{
    ViewData["Title"] = "Result";
}

    <div class="text-center">
        @if (ViewData["FaceCount"].ToString() == "NoFaces")
        {
            <h2 class="display-4">Oops...</h2>
            <p>Looks like there are no faces. Please try another photo.</p>
        }
        else
        {
            <h2 class="display-4">Voilà!</h2>
            <p>The faces have been blurred on your photograph.</p>
        }


        <table class="table">
            <tr>
                <th scope="col">
                    <img src="@ViewData["initialImage"]" alt="Uploaded Image" width="100%" />
                </th>
                <th scope="col" style="width: 20%; vertical-align: middle;">
                    <img src="@ViewData["Arrow"]" alt="Arrow" width="20%" />
                </th>
                <th scope="col">
                    <img src="@ViewData["blurredImage"]" alt="Uploaded Image" width="100%" />
                </th>
            </tr>
        </table>

        <hr width="60%" />
        <p>Got another image to blur? Why not give it a try again!</p>
        <form method="post" action="/Home/Index">
            <input type="submit" class="btn btn-primary btn-lg" value="TRY AGAIN!" />
        </form>
    </div>