@{
    ViewData["Title"] = "Home";
    ViewData["DemoImage"] = "/demo_image.jpg";
    ViewData["Arrow"] = "/arrow.png";
    ViewData["DemoBlurred"] = "/demo_blurred.jpg";
}

<div class="text-center">
    <h2 class="display-4">Hello</h2>
    <p>FaceBlur app allows you to blur faces on photographs.</p>

    <table class="table">
        <tr>
            <th scope="col">
                <img src="@ViewData["DemoImage"]" alt="Default Image" width="100%" />
            </th>
            <th scope="col" style="width: 20%; vertical-align: middle;">
                <img src="@ViewData["Arrow"]" alt="Arrow" width="20%" />
            </th>
            <th scope="col">
                <img src="@ViewData["DemoBlurred"]" alt="Default Image" width="100%" />
            </th>
        </tr>
    </table>

    <hr width="60%" />
    <p>Please upload an image in jpg or png formats:</p>
    <form method="post" action="/Home/UploadImage" enctype="multipart/form-data">
        <input type="file" name="img" accept="image/*" onchange="form.submit()" />
    </form>
</div>
